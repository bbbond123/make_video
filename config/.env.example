# 环境变量示例（请复制为 .env 并填写实际值；勿提交敏感信息）

# 通用代理（如需）
HTTP_PROXY=
HTTPS_PROXY=

# TTS 配置
EDGE_TTS_VOICE=zh-CN-XiaoxiaoNeural
EDGE_TTS_RATE=+0%
EDGE_TTS_PITCH=+0Hz

# 生成式视频/口播 SaaS（可选）
SORA2_API_KEY=
RUNWAY_API_KEY=
PIKA_API_KEY=
HEYGEN_API_KEY=
DID_API_KEY=
SYNTHESIA_API_KEY=

# 存储/云盘（可选）
GDRIVE_CREDENTIALS_JSON=
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# 自动上传（social-auto-upload / Playwright）
UPLOAD_COOKIE_DIR=./secrets/cookies
UPLOAD_PROXY=

# n8n 相关（如用 Docker 可在 compose 中配置）
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me
